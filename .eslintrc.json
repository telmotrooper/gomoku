{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
		"camelcase": "error",
		"eol-last": [
			"warn",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"keyword-spacing": [
			"error",
			{
				"overrides": {
					"catch": {
						"after": false
					},
					"if": {
						"after": false
					},
					"for": {
						"after": false
					},
					"while": {
						"after": false
					}
				}
			}
		],
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"space-before-blocks": "warn",
		"object-curly-spacing": [
			"error",
			"never"
		],
		"space-in-parens": [
			"warn",
			"never"
		],
		"space-infix-ops": [
			"error",
			{
				"int32Hint": false
			}
		],
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-unreachable": "warn",
		"no-var": "error",
        "constructor-super": "warn",
        "valid-typeof": "warn"
    }
}
